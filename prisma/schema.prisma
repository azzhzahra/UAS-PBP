generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  username String    @id @db.VarChar(100)
  password String    @db.VarChar(100)
  name     String    @db.VarChar(100)
  token    String?   @db.VarChar(100)
  mahasiswa Mahasiswa[]
  
  @@map("mst_user")
}

model Mahasiswa {
  id            Int      @id @default(autoincrement())
  nim           String   @db.VarChar(100)
  email         String?  @db.VarChar(200)
  ttl           String   @db.VarChar(100)  
  tahun_masuk   Int      @db.Int
  jenis_kelamin String   @db.VarChar(100)
  username   String    @db.VarChar(100)
  user       User      @relation(fields: [username], references: [username])
  mataKuliah    MataKuliah[]

  @@map("mst_mahasiswa")
}

model MataKuliah {
  id            Int      @id @default(autoincrement())
  kode          String   @db.VarChar(100)
  nama          String   @db.VarChar(100)
  sks           Int      @db.Int
  semester      Int      @db.Int
  dosen         String   @db.VarChar(100)
  ruangan       String   @db.VarChar(100)
  mahasiswa     Mahasiswa @relation(fields: [mahasiswaId], references: [id])
  mahasiswaId   Int      @map("mahasiswa_id")

  @@map("tbl_matakuliah")
}

